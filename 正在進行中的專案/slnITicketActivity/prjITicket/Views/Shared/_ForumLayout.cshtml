    @*<script src="~/Scripts/modernizr-2.6.2.js"></script>*@
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <!-- Bootstrap core CSS -->
    @*<link href="~/Content/bootstrap.min.css" rel="stylesheet" />*@
    <link href="~/Content/Forum_use/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/Content/shop-homepage.css" rel="stylesheet">
    <link href="~/Content/shop-item.css" rel="stylesheet" />
    <!--Bootstrap圖示引用-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/"
          crossorigin="anonymous">
    <!-- Bootstrap core JavaScript -->
    
    <script src="~/Content/Layout/vendor/jquery/jquery.min.js"></script>

    <script src="~/Content/Layout/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>@*<script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>*@
    <script>
        $(function () {
            //阻止下拉菜單點擊自動關閉
            $(".dropdown-menu").on('click', function (e) {
                e.stopPropagation();
            });
        });
    </script>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index","Home")">ITicket購票網</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","Home")">
                            Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("MemberList","BackEnd")">
                            後台
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ActivityList","Activity")">商品一覽</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("forum_homepage","Forum")">
                            討論區
                        </a>
                    </li>
                    @*<li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Register","Login")">註冊</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Login","Login")">登入</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("MemberEidit","Login")">會員修改</a>
                    </li>*@
                    <li class="nav-item">
                        <div class="dropdown ml-auto">
                            <button style="width:35px;height:35px" class="btn btn-cart btn-sm" type="button" id="dropdownMenuButton" data-toggle="dropdown"
                                    aria-haspopup="true" aria-expanded="false">
                                @*<i class="fas fa-shopping-cart text-light fa-2x"></i>*@
                                <i style="content:url(../../images/login_icon.jpg);width:27px;height:27px;transform:translate(-5px,0px)"></i>
                            </button>
                            <div class="dropdown-menu dropdown-menu-right" style="min-width: 300px" aria-labelledby="dropdownMenuButton">
                                <div class="p-3">
                                    <a class="btn btn-block btn-primary btn-sm text-white" href="@Url.Action("Login","Login")">登入</a>
                                    <a class="btn btn-block btn-primary btn-sm text-white" href="@Url.Action("Register","Login")">註冊</a>
                                    <a class="btn btn-block btn-primary btn-sm text-white" href="@Url.Action("MemberEidit","Login")">會員修改</a>
                                    <a class="btn btn-block btn-primary btn-sm text-white" href="@Url.Action("BussEidit","Login")">企業會員修改</a>
                                    <a class="btn btn-block btn-primary btn-sm text-white" href="@Url.Action("Order","Login")">你的訂單</a>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li class="nav-item">
                        <!--下拉式購物車-->
                        <div class="dropdown ml-auto">
                            <button class="btn btn-cart btn-sm" type="button" id="dropdownMenuButton" data-toggle="dropdown"
                                    aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-shopping-cart text-light fa-2x"></i>
                                <span class="badge badge-pill badge-danger">9</span>
                            </button>
                            <div class="dropdown-menu dropdown-menu-right" style="min-width: 300px" aria-labelledby="dropdownMenuButton">
                                <div class="p-3">
                                    <table class="table table-sm ">
                                        <h6>已選擇商品</h6>
                                        <tbody>
                                            <tr>
                                                <td class="align-middle text-center">
                                                    <a href="#removeModal" data-price="1999" data-title="不求人" data-toggle="modal"
                                                       data-target="#removeModal"><i class="far fa-trash-alt "></i></a>
                                                </td>
                                                <td class="align-middle">台北遊戲展</td>
                                                <td class="align-middle">1件</td>
                                                <td class="align-middle text-right">$1999</td>
                                            </tr>
                                            <tr>
                                                <td class="align-middle text-center">
                                                    <a href="#removeModal" data-price="999" data-title="一級偽裝帽" data-toggle="modal"
                                                       data-target="#removeModal"><i class="far fa-trash-alt "></i></a>
                                                </td>
                                                <td class="align-middle">野戰體驗營</td>
                                                <td class="align-middle">1件</td>
                                                <td class="align-middle text-right">$999</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <a href="~/Activity/ViewCart" class="btn btn-block btn-primary btn-sm text-white">去結帳</a>
                                </div>
                            </div>
                        </div>
                        <!--/.下拉式購物車-->
                    </li>
                </ul>
            </div>

        </div>
    </nav>
    <!--你的View在這裡-->
        @RenderBody()
    <!-- Footer -->
    <footer class="py-5 bg-white">
        <div class="container">
            <p class="m-0 text-center text-black-50">Copyright &copy; Your Website 2020</p>
        </div>
    </footer>
</body>
</html>